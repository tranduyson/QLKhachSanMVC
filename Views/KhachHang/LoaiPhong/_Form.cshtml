@model HotelManagement.Models.LoaiPhong

<partial name="_ValidationSummary" />

<div class="row g-3">
    <div class="col-md-6">
        <label asp-for="TenLoaiPhong" class="form-label"></label>
        <input asp-for="TenLoaiPhong" class="form-control" />
        <span asp-validation-for="TenLoaiPhong" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="SoGiuong" class="form-label"></label>
        <input asp-for="SoGiuong" class="form-control" type="number" min="1" />
        <span asp-validation-for="SoGiuong" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="DienTich" class="form-label"></label>
        <div class="input-group">
            <input asp-for="DienTich" class="form-control" type="number" step="0.1" min="0" />
            <span class="input-group-text">m²</span>
        </div>
        <span asp-validation-for="DienTich" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="GiaMoiDem" class="form-label"></label>
        <div class="input-group">
            <input asp-for="GiaMoiDem" class="form-control" type="number" step="1000" min="0" />
            <span class="input-group-text">đ</span>
        </div>
        <span asp-validation-for="GiaMoiDem" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="MoTa" class="form-label"></label>
        <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>
</div>

<partial name="_FormActions" />

