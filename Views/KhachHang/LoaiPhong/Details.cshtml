@model HotelManagement.Models.LoaiPhong
@{
    ViewData["Title"] = "Chi tiết loại phòng";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="row g-3">
    <div class="col-md-6">
        <div class="border rounded-3 p-3 bg-light">
            <div class="text-muted">Mã loại</div>
            <div class="fw-semibold fs-5">@Model.Id</div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="border rounded-3 p-3 bg-light">
            <div class="text-muted">Tên loại phòng</div>
            <div class="fw-semibold fs-5">@Model.TenLoaiPhong</div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="border rounded-3 p-3">
            <div class="text-muted">Số giường</div>
            <div class="fw-semibold fs-5">@Model.SoGiuong</div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="border rounded-3 p-3">
            <div class="text-muted">Diện tích</div>
            <div class="fw-semibold fs-5">@Model.DienTich?.ToString("0.##") m²</div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="border rounded-3 p-3">
            <div class="text-muted">Giá mỗi đêm</div>
            <div class="fw-semibold fs-5">@Model.GiaMoiDem.ToString("N0") đ</div>
        </div>
    </div>
    <div class="col-12">
        <div class="border rounded-3 p-3">
            <div class="text-muted">Mô tả</div>
            <p class="mb-0">@Model.MoTa</p>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Quay lại
    </a>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil-square me-1"></i> Sửa
        </a>
        <form asp-action="Delete" method="post" onsubmit="return confirm('Bạn có chắc muốn xóa loại phòng này?');">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash me-1"></i> Xóa
            </button>
        </form>
    </div>
</div>
