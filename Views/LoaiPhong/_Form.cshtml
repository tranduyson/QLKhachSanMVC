@model HotelManagement.Models.LoaiPhong

<partial name="_ValidationSummary" />

@if (Model.MaLoaiPhong > 0)
{
    <input type="hidden" asp-for="MaLoaiPhong" />
    <input type="hidden" asp-for="Id" />
}

<div class="row g-3">
    @if (Model.MaLoaiPhong > 0)
    {
        <div class="col-md-4">
            <label class="form-label">Mã loại phòng</label>
            <input value="@Model.MaLoaiPhong" class="form-control" readonly />
        </div>
    }
    <div class="col-md-8">
        <label asp-for="TenLoaiPhong" class="form-label">Tên loại phòng</label>
        <input asp-for="TenLoaiPhong" class="form-control" placeholder="Nhập tên loại phòng" />
        <span asp-validation-for="TenLoaiPhong" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="SoGiuong" class="form-label">Số giường</label>
        <input asp-for="SoGiuong" class="form-control" type="number" min="1" step="1" />
        <span asp-validation-for="SoGiuong" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="DienTich" class="form-label">Diện tích (m²)</label>
        <div class="input-group">
            <input asp-for="DienTich" class="form-control" type="number" step="0.01" min="0.01" required placeholder="Nhập diện tích" />
            <span class="input-group-text">m²</span>
        </div>
        <span asp-validation-for="DienTich" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="GiaMoiDem" class="form-label">Giá mỗi đêm</label>
        <div class="input-group">
            <input asp-for="GiaMoiDem" class="form-control" type="number" step="1000" min="0" placeholder="Nhập giá mỗi đêm" />
            <span class="input-group-text">đ</span>
        </div>
        <span asp-validation-for="GiaMoiDem" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="MoTa" class="form-label">Mô tả</label>
        <textarea asp-for="MoTa" class="form-control" rows="3" placeholder="Nhập mô tả loại phòng"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>
</div>

<partial name="_FormActions" />

