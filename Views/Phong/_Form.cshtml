@model HotelManagement.Models.Phong

<partial name="_ValidationSummary" />

@Html.AntiForgeryToken()
<input type="hidden" asp-for="Id" />

<div class="row g-3">
    @if (Model.Id != 0)
    {
        <div class="col-md-4">
            <label class="form-label">Mã phòng</label>
            <input value="@Model.Id" class="form-control" readonly />
        </div>
    }
    <div class="col-md-4">
        <label asp-for="SoPhong" class="form-label">Số Phòng</label>
        <input asp-for="SoPhong" class="form-control" />
        <span asp-validation-for="SoPhong" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="maLoaiPhong" class="form-label">Loại phòng</label>
        <select asp-for="maLoaiPhong" asp-items="ViewBag.LoaiPhongs" class="form-select"></select>
        <span asp-validation-for="maLoaiPhong" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="TinhTrang" class="form-label">Tình trạng</label>
        <select asp-for="TinhTrang" asp-items="ViewBag.TinhTrangList" class="form-select"></select>
        <span asp-validation-for="TinhTrang" class="text-danger"></span>
    </div>
</div>

<partial name="_FormActions" />

