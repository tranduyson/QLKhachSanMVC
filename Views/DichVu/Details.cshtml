@model HotelManagement.Models.DichVu
@{
    ViewData["Title"] = "Chi tiết dịch vụ";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="row g-3">
    <div class="col-md-4">
        <div class="border rounded-3 p-3 bg-light">
            <div class="text-muted">Mã dịch vụ</div>
            <div class="fw-semibold fs-5">@Model.maDichVu</div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="border rounded-3 p-3">
            <div class="text-muted">Tên dịch vụ</div>
            <div class="fw-semibold fs-5">@Model.TenDichVu</div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="border rounded-3 p-3">
            <div class="text-muted">Giá</div>
            <div class="fw-semibold fs-5">@Model.donGia.ToString("N0") đ</div>
        </div>
    </div>
    <div class="col-12">
        <div class="border rounded-3 p-3">
            <div class="text-muted">Mô tả</div>
            <p class="mb-0">@Model.ghiChu</p>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Quay lại
    </a>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.maDichVu" class="btn btn-primary">
            <i class="bi bi-pencil-square me-1"></i> Sửa
        </a>
        <form asp-action="Delete" asp-route-id="@Model.maDichVu" method="post" onsubmit="return confirm('Bạn có chắc muốn xóa dịch vụ này?');">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash me-1"></i> Xóa
            </button>
        </form>
    </div>
</div>
