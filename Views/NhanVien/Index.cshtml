@model IEnumerable<HotelManagement.Models.NhanVien>

@{
    ViewData["Title"] = "Danh sách nhân viên";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Danh sách nhân viên</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Thêm nhân viên
    </a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Họ tên</th>
            <th>Tên đăng nhập</th>
            <th>Chức vụ</th>
            <th>SĐT</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var nv in Model)
        {
            <tr>
                <td>@nv.HoTen</td>
                <td>@nv.TenDangNhap</td>
                <td>@nv.ChucVu</td>
                <td>@nv.SoDienThoai</td>
                <td>@(nv.TrangThai ==1 ? "Hoạt động" : "Không hoạt động")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@nv.MaNhanVien" class="btn btn-sm btn-info">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@nv.MaNhanVien" class="btn btn-sm btn-warning">Sửa</a>
                    <form asp-action="Delete" asp-route-id="@nv.MaNhanVien" method="post" style="display:inline-block;" onsubmit="return confirm('Bạn có chắc muốn xóa nhân viên này?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>