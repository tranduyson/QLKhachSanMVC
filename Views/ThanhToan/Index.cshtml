@model IEnumerable<HotelManagement.Models.ThanhToan>
@{
    ViewData["Title"] = "Danh sách thanh toán";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Danh sách thanh toán</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Thêm thanh toán
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped align-middle">
        <thead class="table-light">
            <tr>
                <th scope="col">Mã</th>
                <th scope="col">Đặt phòng</th>
                <th scope="col">Số tiền</th>
                <th scope="col">Ngày thanh toán</th>
                <th scope="col">Phương thức</th>
                <th scope="col">Trạng thái</th>
                <th scope="col" class="text-end">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>#@item.DatPhongId</td>
                    <td>@item.SoTien.ToString("N0") đ</td>
                    <td>@item.NgayThanhToan.ToString("dd/MM/yyyy")</td>
                    <td>@item.PhuongThuc</td>
                    <td>
                        <span class="badge bg-success">@item.TrangThai</span>
                    </td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">Chi tiết</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">Sửa</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn xóa thanh toán này?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
